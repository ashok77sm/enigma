pipeline {
   agent {label 'build'}
   parameters {
       choice choices: ['ashok', 'crimson', 'enigma'], name: 'user'
   }
   
      stages {
	      stage('checkout-stage') {
		       steps {
		          echo "This is checkout stage"
			     }  
		    }
		    stage('test-stage') {
                      when {
                         allof{
                            branch 'dev'
                            expression { params.user == 'crimson' }
                         }
		      }
		       input {
                       message 'Would you like to continue?'
                       ok 'Yes'
		       submitter 'ashok'
           }
			      steps { 
			        echo "This is test stage"
			      }  
		     }
	     }
}	 
